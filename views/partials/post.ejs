<link rel="stylesheet" href="/css/partials/post.css">

<section class="row">
    <div class="post-box" class="flex-box">
        <h5 class="text-center">
            <a href="/p/<%= post.id %>"><%= post.title %></a>
        </h5>
        <p>
            <%- post.body %>
        </p>
        <hr>
        <p class="text-center">
            <b><%= post.post_date %></b>
        </p>
        <hr>
    </div>
</section>